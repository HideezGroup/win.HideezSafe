<Page 
    x:Class="HideezClient.PagesView.DefaultPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:l="clr-namespace:HideezClient.Modules.Localize"
    xmlns:local="clr-namespace:HideezClient.PagesView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="clr-namespace:HideezClient.Controls"
    Title="DefaultPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding SoftwareKeyPageViewModel, Mode=OneWay, Source={StaticResource Locator}}"
    Style="{DynamicResource PageStyle}"
    mc:Ignorable="d">
    <Grid
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        TextBlock.FontSize="16">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Center" Width="350">
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock
                Margin="0,8"
                HorizontalAlignment="Center"
                FontWeight="DemiBold"
                Foreground="{DynamicResource DarkForeground}"
                Text="{l:Localization DP.Header}"
                TextWrapping="Wrap" 
                 />

            <TextBlock
                Grid.Row="1"
                HorizontalAlignment="Center"
                Text="{l:Localization DP.Description}"
                TextWrapping="Wrap" />
        </Grid>
        <Grid Grid.Row="1" HorizontalAlignment="Center" Margin="0,50,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="50" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="24" />
                <ColumnDefinition Width="320" />
            </Grid.ColumnDefinitions>

            <!--  1 line  -->
            <ContentPresenter
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="0"
                Width="64"
                Height="64"
                Content="{StaticResource KeyIco}" />

            <StackPanel
                Orientation="Horizontal"
                VerticalAlignment="Top"
                Grid.Row="0"
                Grid.Column="2"
                Margin="0,0,0,8">
                <TextBlock
                    FontWeight="DemiBold"
                    Foreground="{DynamicResource DarkForeground}"
                    Text="{l:Localization DP.HideezKey.Header}"
                    TextWrapping="Wrap"/>
                
                <controls:InfoButton Margin="2,-2,0,0" />
            </StackPanel>
            

            <TextBlock
                Grid.Row="1"
                Grid.Column="2"
                Text="{l:Localization DP.HideezKey.Description}"
                TextWrapping="Wrap" 
                VerticalAlignment="Top"/>

            <!--  2 line  -->
            <ContentPresenter
                Grid.Row="3"
                Grid.RowSpan="2"
                Grid.Column="0"
                Width="64"
                Height="64"
                Content="{StaticResource MobileKeyIco}" />

            <StackPanel 
                Orientation="Horizontal"
                Grid.Row="3"
                Grid.Column="2"
                Margin="0,0,0,8">
                <TextBlock
                    FontWeight="DemiBold"
                    Foreground="{DynamicResource DarkForeground}"
                    Text="{l:Localization DP.MobileKey.Header}"
                    TextWrapping="Wrap" />

                <controls:InfoButton Margin="2,-2,0,0"/>
            </StackPanel>

            <TextBlock
                Grid.Row="4"
                Grid.Column="2"
                Text="{l:Localization DP.MobileKey.Description}"
                TextWrapping="Wrap" />
        </Grid>
    </Grid>
</Page>
