<Page
    x:Class="HideezClient.PagesView.PasswordManagerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:HideezClient.PagesView"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PasswordManagerPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding PasswordManager, Mode=OneWay, Source={StaticResource Locator}}"
    Style="{DynamicResource PageStyle}"
    mc:Ignorable="d">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock Text="{Binding ObservableId, StringFormat='Password manager {0}'}" />
        <TextBlock Text="{Binding Device.SerialNo, StringFormat='SerialNo: {0}'}" />
    </StackPanel>
</Page>
