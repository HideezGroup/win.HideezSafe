<UserControl 
    x:Class="HideezClient.Controls.ServiceRequiredMessageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:HideezClient.Controls"
    xmlns:l="clr-namespace:HideezClient.Modules.Localize"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="24" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <ContentPresenter
            Grid.Column="0"
            VerticalAlignment="Center"
            Width="50"
            Height="50"
            Content="{StaticResource WarnIco}"/>

        <TextBlock
            Grid.Column="2"
            VerticalAlignment="Center"
            TextWrapping="Wrap"
            Text="{l:Localization Settings.Label.ServiceOfflineTip}"
            />
    </Grid>
</UserControl>
